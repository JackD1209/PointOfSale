<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/productName_variable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#EDEDED"
                android:gravity="center_vertical|start"
                android:paddingRight="3dp"
                android:textColor="#2E2828"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/barcode_variable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#2E2828"
                android:background="#EDEDED"/>

        </LinearLayout>


        <TextView
            android:id="@+id/category_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/supplier_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cost_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selling_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/count_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>