<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/nameLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/customer_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/note_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_name_variable"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textSize="25sp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>