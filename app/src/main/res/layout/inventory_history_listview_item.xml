<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nameLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inventory_supplier_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inventory_remark_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inventory_cost_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inventory_profitmargin_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inventory_updatedon_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingRight="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inventory_quantity_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#EDEDED"
            android:gravity="center_vertical|start"
            android:paddingEnd="3dp"
            android:textColor="#2E2828"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>