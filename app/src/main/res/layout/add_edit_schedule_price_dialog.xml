<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/current_selling_price_ask"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Current Selling Price:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_selling_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/current_selling_price_ask"
            android:paddingEnd="0dp"
            android:paddingStart="20dp" />

        <TextView
            android:id="@+id/current_cold_price_ask"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_selling_price_ask"
            android:paddingTop="10dp"
            android:text="Current Cold Price:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_cold_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_selling_price_ask"
            android:layout_toEndOf="@+id/current_selling_price_ask"
            android:layout_toRightOf="@+id/current_selling_price_ask"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/new_selling_price_ask"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_cold_price_ask"
            android:paddingTop="20dp"
            android:text="New Selling Price"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_selling_price_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_cold_price_ask"
            android:layout_toEndOf="@+id/new_selling_price_ask"
            android:inputType="numberDecimal"
            android:paddingTop="20dp" />


        <TextView
            android:id="@+id/new_cold_price_ask"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_selling_price_ask"
            android:paddingTop="20dp"
            android:text="New Cold Price"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_cold_price_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_selling_price_ask"
            android:layout_toEndOf="@+id/new_selling_price_ask"
            android:inputType="numberDecimal"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/schedule_price_start_on_ask"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_cold_price_ask"
            android:paddingTop="20dp"
            android:text="Start On:"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_cold_price_ask"
            android:layout_toEndOf="@id/schedule_price_start_on_ask"
            android:paddingTop="20dp"
            android:text="Ex: 27/07/2016" />

        <EditText
            android:id="@+id/schedule_price_start_on_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_price_start_on_ask"
            android:inputType="datetime"
            android:paddingTop="5dp" />

    </RelativeLayout>

</ScrollView>